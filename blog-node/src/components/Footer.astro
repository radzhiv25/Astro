---
import Twitter from '/images/twitter.png'
import Instagram from '/images/Instagram.png'
import Facebook from '/images/facebook1.png'
import Twitch from '/images/twitch1.png'
---

<div class="footer text-[#ffb941] text-center py-5">
    <div class="footer-links flex items-center justify-evenly py-5">
        <div class="list-1 text-left">
            <h1 class="text-xl font-bold">
                <a href="/news">
                    News
                </a>
            </h1>
            <ul class="">
                <li>Technology</li>
                <li>Business</li>
                <li>Politics</li>
            </ul>
        </div>
        <div class="list-2 text-center">
            <h1 class="text-xl font-bold">
                <a href="/job">
                    Jobs
                </a>
            </h1>
            <ul class="">
                <li>Design</li>
                <li>Marketing</li>
                <li>Management</li>
            </ul>
        </div>
        <div class="list-3 text-right">
            <h1 class="text-xl font-bold">
                <a href="/event">
                    Events
                </a>
            </h1>
            <ul class="">
                <li>Webinars</li>
                <li>Workshops</li>
                <li>Comedy Shows</li>
            </ul>
        </div>
    </div>
    <div class="footer-icon py-5">
        <ul class="mt-5 flex justify-center gap-5">
            <li>
                <img src={Twitter} alt="" class="w-6">
            </li>
            <li>
                <img src={Instagram} alt="" class="w-6">
            </li>
            <li>
                <img src={Facebook} alt="" class="w-6">
            </li>
            <li>
                <img src={Twitch} alt="" class="w-6">
            </li>
        </ul>
    </div>
    <h2 class="py-2 font-bold">All rights reserved, Blog Node 2023.</h2>
</div>